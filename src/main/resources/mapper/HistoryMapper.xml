<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kgc.easybuy.dao.HistoryMapper">

    <insert id="addProductHistory" parameterType="History">
        insert into easybuy_history(userId,productId,createTime)
        values (#{userId},#{productId},now())
    </insert>

    <update id="cleanHistory">
        update easybuy_history set isDel = 1 where userId = #{userId}
    </update>
</mapper>